    color: $color-actionable-active;
  }
}

strong.mimicLinkStyle {
  font-weight: 700;
}

a.disabled,
.mimicLinkStyle.disabled {
  color: $color-actionable-disabled;
  text-decoration: none;
  font-weight:400;
  cursor: default;

  &:visited {
    color: $color-actionable-disabled;
    text-decoration: none;
  }

  &:hover {
    text-decoration: none;
    color: $color-actionable-disabled;
  }

  &:active {
    text-decoration: none;
    color: $color-actionable-disabled;
  }
}

a.toggled {
  color: $color-actionable-hover;
  text-decoration: underline;
  font-weight:400;

  &:visited {
    color: $color-actionable-hover;
    text-decoration: underline;
  }

  &:hover {
    color: $color-actionable-hover;
    text-decoration: underline;
  }

  &:active {
    color: $color-actionable-hover;
    text-decoration: underline;
  }
