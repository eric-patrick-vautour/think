  padding-left:1.5rem;
/*  background-image:url(<%= image_path "icons/icon-info.png" %>);
  background-repeat:no-repeat;
  background-position: 0px 3px;
*/}

p.info:before,
div.info:before {
  font-family: $font-icons;
  position: absolute;
  display: block;
  width: 20px;
  height: 20px;
  border-radius: 10px;
  background-color: #D5ECFE;
  font-size: 20px;
  line-height: 1;
  top: 0.125rem;
  left: 0;
  content: "\e63a";
  color: #2DB3DF;

}

p.info a, div.info a {
