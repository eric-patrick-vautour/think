    color: $color-actionable-destructive;
    text-decoration: none;
  }

  &:hover {
    text-decoration: underline;
    color: $color-actionable-destructive-hover;
  }

  &:active {
    text-decoration: underline;
    color: $color-actionable-destructive-active;
  }
}

