  content: "\e605";
}

.dataTables_paginate a.next.disabled,
.dataTables_paginate a.previous.disabled {
	background-color: $color-actionable-disabled;
  border-bottom-color: darken($color-actionable-disabled, 10%);
	cursor:default;
  opacity: 0.5;
