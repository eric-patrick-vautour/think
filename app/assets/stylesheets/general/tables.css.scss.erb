}

/*
  This supports the table-search directive that mimics
  the search behaviour of dataTables_filter.
*/
.tableSearch {
  height: 3rem;
}


.dataTables_filter label {
  margin-bottom:0px;
  margin-right:0.25rem;
}

.dataTables_filter label * {
  /*vertical-align:middle;*/
}

.dataTables_filter input:not([type=checkbox]):not([type=radio]),
html.ie .dataTables_filter input:not([type=checkbox]):not([type=radio]),
.dataTables_filter input[type=search] {
	background-color: $color-form-element-background;
	border: none;
	padding:0rem;
  padding-right:0.375rem;
  padding-left:0.375rem;
	margin:0rem;
	font-size:1rem;
	font-family: $font-body;
	color:	$color-dark-text;
	font-weight:400;
	vertical-align:middle;
  width:12rem;
  -webkit-appearance: none;
  min-height: 0;

  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;

  -webkit-border-radius: none;
  -moz-border-radius: none;
  border-radius: none;

  display:inline;

  box-sizing: border-box;
  -ms-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;

}

.dataTables_filter input:focus {
	outline: none;
}

.dataTables_filter input::-webkit-search-cancel-button {
    display:none;
}

.dataTables_filter input::-ms-clear {
    display: none;
}

.dataTables_filter img {
    border:none;
}

.dataTables_filter img.searchIcon {
    float:left;
    margin-top:0.375rem;
    position: relative;
    background-image:url(<%= image_path "icons/icon-search.png" %>);
    background-repeat:no-repeat;
}

.dataTables_filter img.clearSearch {
    float:right;
    margin-top:0.375rem;
    background-image:url(<%= image_path "icons/icon-close.png" %>);
    background-repeat:no-repeat;
	cursor:pointer;
	opacity:1;
}

.dataTables_filter img.hideClearSearchButton {
	cursor:default;
	opacity:0;
}

/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
 * DataTables pagination
 */

.dataTablesCustomBottom {
    text-align:center;
	/*border-top:solid 2px $color-keyline-dark;*/
  margin-top:0.375rem;

}

.dataTables_paginate {
	/*float:right;*/
	white-space: nowrap;
	/*margin-top:0.75rem;*/
}

.dataTables_length {
	width:40%;
	text-align:right;
	float:right;
	color: $color-dark-text;
	/*margin-top:0.375rem;*/
	padding-right:0.3rem;
}

.dataTables_length select {
    width:5rem;
    text-align: center;
}

.dataTables_length label {
  margin-right: 0px;
}

.dataTables_info {
	width:40%;
	float:left;
	text-align:left;
	color:#404040;
	margin-top:0.375rem;
	padding-left:0.3rem;
}


.dataTables_paginate a {
	font-family: $font-body;
	font-weight: 700;
	color: #FFFFFF;
	font-size: 1rem;
	text-transform:uppercase;
  width:32px;
  height:32px;
	background-color: $color-actionable;
	border-top:none;
  border-left: none;
  border-right: none;
  border-bottom: solid 2px darken($color-actionable, 15%);
	text-decoration:none;
	margin-left:0.125rem;
	margin-right:0.125rem;
  margin-top: 0.125rem;
	display:inline-block;
	overflow:hidden;
	color: rgba(255,255,255,0.00);
  text-indent: 40px;
	border-radius: 5px;
}

.dataTables_paginate a:before {
  display: block;
  font-family: $font-icons;
  width: 32px;
  height: 32px;
  font-size: 16px;
  line-height: 32px;
  text-indent: 0px;
  color: #FFFFFF;
  text-align: center;  
}

.dataTables_paginate a:hover {
	background-color: $color-actionable-hover;
  border-bottom-color: darken($color-actionable-hover, 15%);
	cursor:pointer;
}

.dataTables_paginate a:active {
	background-color: $color-actionable-active;
  border-bottom: none;
  height: 30px;
  margin-top: 2px;
