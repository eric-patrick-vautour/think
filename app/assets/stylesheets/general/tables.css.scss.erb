  padding-top: 0px;
}

.thinnerRows .sorting:before,
.thinnerRows .sorting_asc:before,
.thinnerRows .sorting_desc:before {
  padding-top: 2px;
}

.sorting:before {
  content: "\e607";
  color: $color-icon-medium;
}

.sorting_asc:before {
  content: "\e608";
  color: $color-icon-dark;
}

.sorting_desc:before {
  content: "\e609";
  color: $color-icon-dark;
}


.sorting:hover,
.sorting_asc:hover,
.sorting_desc:hover {
  cursor: pointer;
  background-color: $color-table-row-hover;
}

.sorting:active,
.sorting_asc:active,
.sorting_desc:active {
  background-color: $color-table-row-selected;
}


.sorting_asc_disabled {
  padding-right: 20px;
	background-image: url(<%= image_path "icons/icon-sort-asc-disabled.png" %>);
	background-repeat: no-repeat;
	background-position: center right;
}

.sorting_desc_disabled {
  padding-right: 20px;
	background-image: url(<%= image_path "icons/icon-sort-desc-disabled.png" %>);
	background-repeat: no-repeat;
	background-position: center right;
}



