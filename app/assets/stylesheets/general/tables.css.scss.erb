table.reorderColumns th:hover {
  cursor: url(<%= image_path "ui/openhand.cur" %>), pointer; /* for IE */
  cursor: -webkit-grab;
  cursor: -moz-grab;
  cursor: grap;
}

.draggableCursor table.reorderColumns th:hover {
  cursor: url(<%= image_path "ui/closedhand.cur" %>), move; /* for IE */
  cursor: -webkit-grabbing;
  cursor: -moz-grabbing;
  cursor: grabbing;
}

table.reorderColumns th:active {
  cursor: url(<%= image_path "ui/closedhand.cur" %>), move; /* for IE */
  cursor: -webkit-grabbing;
  cursor: -moz-grabbing;
  cursor: grabbing;  
}

table.deleteColumns th > div.columnDelete {
  position: absolute;
  top: 3px;
  right: 3px;
  cursor: pointer;
  width: 9px;
  height: 9px;
  opacity: 0;
  -webkit-transition: opacity 0.1s;
  -moz-transition: opacity 0.1s;
  -o-transition: opacity 0.1s;
  -ms-transition: opacity 0.1s;
  transition: opacity 0.1s;  

  background-image: url(<%= image_path "icons/icon-delete_sm.png" %>);
  background-repeat: no-repeat;
}

table.deleteColumns th:hover > div.columnDelete {
  opacity: 1;
}

table.topAlignedRows td {
  vertical-align: top;
}

table.truncateCells {
  table-layout: fixed;
}

table.truncateCells td,
table.truncateCells th {
  text-overflow: ellipsis;
  overflow:hidden;
  text-align:left\9; /* right-aligned text will overlap the ellipsis in IE9 */
}

table.noWrap td,
table.noWrap th {
  white-space: nowrap;
}

/*
   Unfortunately, IE10 understands the IE9 hack above, and
   we only want to apply it to IE 9.
   This is a hack for IE10 to undo the above IE9 hack.
*/
@media screen and (-ms-high-contrast: active), (-ms-high-contrast: none) {
  table.truncateCells td,
  table.truncateCells th {
    text-align:center;
  }
  table.truncateCells td.leftJustify,
  table.truncateCells th.leftJustify {
    text-align:left;
  }
  table.truncateCells td.rightJustify,
  table.truncateCells th.rightJustify {
    text-align:right;
  }
}

