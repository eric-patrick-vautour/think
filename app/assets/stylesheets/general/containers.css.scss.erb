/************** INFORMATION CALL-OUT ********************/

.callout {
  background-color: $color-callout-bg;
  padding:0.75rem;
  padding-left:38px;
  margin-bottom:1.5rem;
  max-width:56rem;
  position: relative;

/*  background-image:url(<%= image_path "icons/icon-info.png" %>);
  background-repeat:no-repeat;
  background-position: top 14px left 12px;
*/}

.callout:before {
  font-family: "KSP-Icons";
  position: absolute;
  display: block;
  width: 20px;
  height: 20px;
  border-radius: 10px;
  background-color: #D5ECFE;
  font-size: 20px;
  line-height: 1;
  top: 0.875rem;
  left: 11px;
  content: "\e63a";
  color: #2DB3DF;
}

.callout.error {
  background-color: #FEF3F3;
  color: $color-dark-text;
  border: solid 1px $color-error-text;
  word-break: break-all;
}

.callout.error:before {
  border-radius: 0;
  background-color: initial;
  content: "\e611";
  font-size: 32px;
  left: 4px;
  top: 8px;
  color: #FFD200;
}

.callout.error:after {
  position: absolute;
  left: 4px;
  top: 8px;
  color: #000000;
  content: "\e612";
  font-size: 32px;
  font-family: "KSP-Icons";
  line-height: 1;
}

.callout p {
  margin-bottom:0.75rem;
}

.callout p:last-child, .callout.compact p:last-child {
  margin-bottom:0rem;
}

.callout.compact {
  /*background-color: $color-callout-bg;*/
  padding:0.375rem;
  padding-left:2rem;
  margin-bottom:1.5rem;

/*  background-image:url(<%= image_path "icons/icon-info.png" %>);
  background-repeat:no-repeat;
  background-position:left 8px top 8px;
*/}

.callout.compact:before {
  top: 0.5rem;
  left: 0.5rem;
}

.callout.compact.error:before {
  top: 2px;
  left: 2px;
}
.callout.compact.error:after {
  top: 2px;
  left: 2px;
}


span.callout {
  background-position: top 11px left 12px;
}

span.callout.compact {
  background-position:left 8px top 5px;
}

.callout.noBottomMargin {
  margin-bottom:0;
}

.callout.marginBottomQuarter {
  margin-bottom:0.375rem;
}

.callout.marginBottomHalf {
  margin-bottom:0.75rem;
}

.callout.stretch {
  max-width: none;
}


