/* CSS Document */
@import "_variables.scss";

.header .topBar {
    height:3rem;
    background-color:#013466;
}

.header .topBar > a {
    display:inline-block;
    margin-top:0.25rem;
    margin-left:0.25rem;
}

.header .navBar {
    min-height:1.5rem;
    padding-left:1.5rem;
    padding-right:1.5rem;
    background-color:#FFFFFF;

}

.header .navBar a, .header .navBar a:visited {
    color:#01488D;
    text-decoration:none;
}

.header .navBar a:hover {
    color:#0158AD;
    text-decoration:underline;
}

.header .navBar a:active {
    color:#013466;
    text-decoration:none;
}

.header .navBar select {
    width:100%;
    box-sizing:border-box;
    -ms-box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    display:none;
}

.header .navBar li {
    margin-right:1rem;
}

.header .navBar li:last-child {
    margin-right:0rem;
}

div.footer {
    padding: 1.5rem   1.5rem;
    background-color: #6C6463;
}

div.footer p {
    color:#FFFFFF;
    font-size:0.75rem;
    line-height:1 rem;
}

div.floatLeft {
    margin-right:2rem;
}

.flashAlertsContainer > span {
  color:#FFFFFF;
  font-weight:400;
}

.fontSpecimen.arquitecta {
  font-family:Arquitecta;
  font-size:3.25rem;
  font-weight: 300;
  line-height:3rem;
  margin-bottom:1.5rem;
  letter-spacing:0.25rem;
  color: #00A9CE;
}

.fontSpecimen.openSans {
  font-family:"Open Sans";
  font-size:2.75rem;
  font-weight: normal;
  line-height:3rem;
  margin-bottom:1.5rem;
  letter-spacing:0.25rem;
  color: #00A9CE;
}

.header .nav .userMgmt.styleguide {
  height: 29px;
}

.header .nav .userMgmt.styleguide > a {
  color: $color-main-nav-links;
  font-size: 0.875rem;
  text-decoration: none;

  &:visited {
    text-decoration: none;
  }

  &:hover {
    text-decoration: underline;
  }

  &:active {
    text-decoration: underline;
  }
}

.fixedNav .userMgmt > ul {
  margin-right: 0.75rem;
}